{
  "name": "Job Snippet Helper",
  "version": "2.3",
  "manifest_version": 3,
  "description": "Modern snippet manager with dark mode and persistent storage.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Snippet Panel"
  }
}